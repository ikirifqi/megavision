<div class="text-center" style="padding:50px 0">
  <div class="logo">identify yourself</div>
  <div class="login-form-1">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'text-left' }) do |f| %>
      <div class="login-form-main-message"></div>
      <div class="main-login-form">
        <div class="login-group">
          <div class="form-group">
            <%= f.label :email, :class => 'sr-only' %>
            <%= f.email_field :email, :autofocus => true, :class => 'form-control', :placeholder => 'ID' %>
          </div>
          <div class="form-group">
            <%= f.label :password, :class => 'sr-only' %>
            <%= f.password_field :password, autocomplete: 'off', :class => 'form-control', :placeholder => 'Password' %>
          </div>
          <div class="form-group login-group-checkbox">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        </div>
        <button type="submit" name="commit" data-disable-with="Log in" class="login-button"><i class="fa fa-chevron-right"></i></button>
      </div>
      <div class="etc-login-form">
        <p>Back to <%= link_to 'website', root_path %></p>
      </div>
    <% end %>
  </div>
</div>
