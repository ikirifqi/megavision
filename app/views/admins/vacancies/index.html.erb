<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
    <%= breadcrumb_item 'Vacancies' %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Vacancy Management</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <%= link_to new_admins_vacancy_path, :class => 'btn btn-success pull-right' do %>
            <span class="glyphicon glyphicon-plus"></span>&nbsp;Create Vacancy
          <% end %>

          <thead>
            <tr>
              <th>Position</th>
              <th>Location</th>
              <th>Posted</th>
              <th>Control</th>
            </tr>
          </thead>

          <tbody>
            <% if @vacancies.empty? %>
              <tr>
                <td colspan="6">You have no vacancies. <%= link_to 'Create a new one!', new_admins_vacancy_path %>.</td>
              </tr>
            <% else %>
              <% @vacancies.each do |vacancy| %>
                <tr>
                  <td><%= vacancy.position %></td>
                  <td><%= vacancy.location %></td>
                  <td><%= vacancy.created_at.to_s %></td>
                  <td>
                    <%= link_to 'Show', admins_vacancy_path(vacancy) %>&nbsp;|
                    <%= link_to 'Edit', edit_admins_vacancy_path(vacancy) %>&nbsp;|
                    <%= link_to 'Destroy', admins_vacancy_path(vacancy), method: :delete, data: { confirm: 'Are you sure?' } %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
