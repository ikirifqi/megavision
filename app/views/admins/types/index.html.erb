<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
    <%= breadcrumb_item 'Channel Cities', admins_channel_cities_path %>
    <%= breadcrumb_item 'Channel City Types' %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Channel City Type List Management</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
         <!--  <%= link_to new_admins_channel_city_path, :class => 'btn btn-success pull-right' do %>
            <span class="glyphicon glyphicon-plus"></span>&nbsp;Create Channel City
          <% end %>
 -->
          <thead>
            <tr>
              <th>Type</th>
              <th>Package Count</th>
              <th>Control</th>
            </tr>
          </thead>

          <tbody>
            <% if @channel_types.empty? %>
              <tr>
                <td colspan="3">You have no channel types.</td>
              </tr>
            <% else %>
              <% @channel_types.each do |channel_type| %>
                <tr>
                  <td><%= channel_type.channel_type.name %></td>
                  <td><%= link_to channel_type.channel_packages.count, admins_channel_city_type_channel_packages_path(params[:channel_city_id], channel_type) %></td>
                  <td>
                     <%= link_to 'Edit', edit_admins_channel_city_type_path(params[:channel_city_id], channel_type) %>
                   </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
