<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_for([:admins, channel_type.channel_city, channel_type], url: admins_channel_city_type_path(params[:channel_city_id], params[:id]) , :html => { :class => 'form-horizontal' }) do |f| %>
          <% if channel_type.errors.any? %>
            <div class="alert alert-danger" role="alert">
              <strong>Ops! <%= pluralize(channel_type.errors.count, "error") %> found:</strong><br/>
              <ul>
                <% channel_type.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

           <div class="form-group">
            <%= f.label :channel_packages, :class => 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.select :channel_package_ids, @packages, {selected: channel_type.channel_packages.map(&:package_id)}, :multiple => true, :class => 'chosen'  %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 text-right">
              <%= link_to admins_channel_city_types_path(params[:channel_city_id]), :class => 'btn btn-warning' do %>
                <span class="glyphicon glyphicon-menu-left"></span>&nbsp;Back
              <% end %>
            </div>
            <div class="col-md-6 text-left">
              <%= f.submit 'Save', :class => 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
