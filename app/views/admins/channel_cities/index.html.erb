<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
    <%= breadcrumb_item 'Channel Cities' %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Channel City List Management</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <%= link_to new_admins_channel_city_path, :class => 'btn btn-success pull-right' do %>
            <span class="glyphicon glyphicon-plus"></span>&nbsp;Create Channel City
          <% end %>

          <thead>
            <tr>
              <th>City</th>
              <th>Channel Count</th>
              <th>Control</th>
            </tr>
          </thead>

          <tbody>
            <% if @channel_cities.empty? %>
              <tr>
                <td colspan="3">You have no channel cities. <%= link_to 'Create a new one!', new_admins_channel_city_path %>.</td>
              </tr>
            <% else %>
              <% @channel_cities.each do |channel_city| %>
                <tr>
                  <td><%= channel_city.city %></td>
                  <td><%= channel_city.channels.count %></td>
                  <td>
                    <%= link_to 'Edit', edit_admins_channel_city_path(channel_city) %>&nbsp;|
                    <%= link_to 'Destroy', admins_channel_city_path(channel_city), method: :delete, data: { confirm: 'Are you sure?' } %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
