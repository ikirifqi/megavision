<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
    <%= breadcrumb_item 'Area Coverages' %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Area Coverages</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">

          <%= link_to new_admins_area_coverage_path, :class => 'btn btn-success pull-right' do %>
            <span class="glyphicon glyphicon-plus"></span>&nbsp;Create Area Coverage
          <% end %>
          <%= link_to 'Import Area Coverage', import_admins_area_coverages_path, {:class => "btn btn-primary pull-right"} %>

          <thead>
            <tr>
              <th>City</th>
              <th>Code</th>
              <th>Area</th>
              <th>Control</th>
            </tr>
          </thead>

          <tbody>
            <% if @area_coverages.empty? %>
              <tr>
                <td colspan="3">You have no area_coverages. <%= link_to 'Create a new one!', new_admins_area_coverage_path %>.</td>
              </tr>
            <% else %>
              <% @area_coverages.each do |coverage| %>
                <tr>
                  <td><%= coverage.channel_city.try(:city) %></td>
                  <td><%= coverage.area_code.try(:code) %></td>
                  <td><%= coverage.area %></td>
                  <td>
                    <%= link_to 'Edit', edit_admins_area_coverage_path(coverage) %>&nbsp;|
                    <%= link_to 'Destroy', admins_area_coverage_path(coverage), method: :delete, data: { confirm: 'Are you sure?' } %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
