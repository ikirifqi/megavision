<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
    <%= breadcrumb_item 'Channel Groups' %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Channel Group Management</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <%= link_to new_admins_channel_group_path, :class => 'btn btn-success pull-right' do %>
            <span class="glyphicon glyphicon-plus"></span>&nbsp;Create Channel Group
          <% end %>

          <thead>
            <tr>
              <th>Group Name</th>
              <th>Title</th>
              <th>Channel Count</th>
              <th>Control</th>
            </tr>
          </thead>

          <tbody>
            <% if @channel_groups.empty? %>
              <tr>
                <td colspan="3">You have no channel groups. <%= link_to 'Create a new one!', new_admins_channel_group_path %>.</td>
              </tr>
            <% else %>
              <% @channel_groups.each do |channel_group| %>
                <tr>
                  <td><%= channel_group.name %></td>
                  <td><%= channel_group.title %></td>
                  <td><%= channel_group.channels.count %></td>
                  <td>
                    <%= link_to 'Edit', edit_admins_channel_group_path(channel_group) %>&nbsp;|
                    <%= link_to 'Destroy', admins_channel_group_path(channel_group), method: :delete, data: { confirm: 'Are you sure?' } %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
