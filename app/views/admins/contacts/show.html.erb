<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
    <%= breadcrumb_item 'Contacts', admins_contacts_path %>
    <%= breadcrumb_item 'Preview' %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= @contact.subject %></h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <span class="glyphicon glyphicon-user"></span>&nbsp;<%= @contact.name %><br/>
        <span class="glyphicon glyphicon-envelope"></span>&nbsp;<%= mail_to @contact.email, @contact.email %><br/>
        <span class="glyphicon glyphicon-time"></span>&nbsp;<%= @contact.created_at.to_s %><br/>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= @contact.message %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= link_to admins_contacts_path, :class => 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-menu-left"></span>&nbsp;Back
        <% end %>
      </div>
    </div>
  </div>
</div>
