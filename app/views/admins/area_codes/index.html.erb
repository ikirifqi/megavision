<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
    <%= breadcrumb_item 'Area Codes' %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Area Codes</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">

          <%= link_to new_admins_area_code_path, :class => 'btn btn-success pull-right' do %>
            <span class="glyphicon glyphicon-plus"></span>&nbsp;Create Area Code
          <% end %>

          <thead>
            <tr>
              <th>Code</th>
              <th>Type</th>
              <th>Control</th>
            </tr>
          </thead>

          <tbody>
            <% if @area_codes.empty? %>
              <tr>
                <td colspan="2">You have no area codes. <%= link_to 'Create a new one!', new_admins_area_code_path %>.</td>
              </tr>
            <% else %>
              <% @area_codes.each do |code| %>
                <tr>
                  <td><%= code.code %></td>
                  <td><%= code.channel_types.first.try(:name) %></td>
                  <td>
                    <%= link_to 'Edit', edit_admins_area_code_path(code) %>&nbsp;|
                    <%= link_to 'Destroy', admins_area_code_path(code), method: :delete, data: { confirm: 'Are you sure?' } %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
