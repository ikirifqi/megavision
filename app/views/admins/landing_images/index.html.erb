<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
    <%= breadcrumb_item 'Landing Images' %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Landing Image Management</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <%= link_to new_admins_landing_image_path, :class => 'btn btn-success pull-right' do %>
            <span class="glyphicon glyphicon-plus"></span>&nbsp;Create Landing Image
          <% end %>

          <thead>
            <tr>
              <!-- <th>Title</th> -->
              <th>Status</th>
              <th>Posted</th>
              <th>Control</th>
            </tr>
          </thead>

          <tbody>
            <% if @landing_images.empty? %>
              <tr>
                <td colspan="6">You have no landing image. <%= link_to 'Create a new one!', new_admins_landing_image_path %>.</td>
              </tr>
            <% else %>
              <% @landing_images.each do |landing_image| %>
                <tr>
                  <!-- <td><%= landing_image.title %></td> -->
                  <td><%= landing_image.status %></td>
                  <td><%= landing_image.created_at.to_s %></td>
                  <td>
                    <%= link_to 'Show', admins_landing_image_path(landing_image) %>&nbsp;|
                    <%= link_to 'Edit', edit_admins_landing_image_path(landing_image) %>&nbsp;|
                    <%= link_to 'Destroy', admins_landing_image_path(landing_image), method: :delete, data: { confirm: 'Are you sure?' } %>&nbsp;|
                    <%= link_to landing_image.draft? ? 'Publish' : 'Make Draft', landing_image.draft? ? admins_landing_image_make_published_path(landing_image) : admins_landing_image_make_draft_path(landing_image), data: { confirm: 'Are you sure?' } %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
