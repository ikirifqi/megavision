<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
    <%= breadcrumb_item 'Channel Types' %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Channel Type Management</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <%= link_to new_admins_channel_type_path, :class => 'btn btn-success pull-right' do %>
            <span class="glyphicon glyphicon-plus"></span>&nbsp;Create Channel Type
          <% end %>

          <thead>
            <tr>
              <th>Type</th>
              <th>Channel City Count</th>
              <th>Control</th>
            </tr>
          </thead>

          <tbody>
            <% if @channel_types.empty? %>
              <tr>
                <td colspan="3">You have no channel types. <%= link_to 'Create a new one!', new_admins_channel_type_path %>.</td>
              </tr>
            <% else %>
              <% @channel_types.each do |channel_type| %>
                <tr>
                  <td><%= channel_type.name %></td>
                  <td><%= channel_type.channel_cities.count %></td>
                  <td>
                    <%= link_to 'Edit', edit_admins_channel_type_path(channel_type) %>&nbsp;|
                    <%= link_to 'Destroy', admins_channel_type_path(channel_type), method: :delete, data: { confirm: 'Are you sure?' } %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
