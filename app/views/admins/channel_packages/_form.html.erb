<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_for([:admins, channel_package], url: admins_channel_city_type_channel_package_path(params[:channel_city_id], params[:type_id], params[:id]) , :html => { :class => 'form-horizontal' }) do |f| %>
          <% if channel_package.errors.any? %>
            <div class="alert alert-danger" role="alert">
              <strong>Ops! <%= pluralize(channel_package.errors.count, "error") %> found:</strong><br/>
              <ul>
                <% channel_package.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

           <div class="form-group">
            <%= f.label :channel_groups, :class => 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.select :channel_group_ids, @channel_groups, {}, :multiple => true, :class => 'chosen'  %>
            </div>
          </div>

           <div class="form-group">
            <%= f.label :prices, :class => 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.select :price_ids, @prices, {}, :multiple => true, :class => 'chosen'  %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :description, :class => 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.text_area :description, :class => 'form-control' %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 text-right">
              <%= link_to admins_channel_city_type_channel_packages_path(params[:channel_city_id], params[:type_id]), :class => 'btn btn-warning' do %>
                <span class="glyphicon glyphicon-menu-left"></span>&nbsp;Back
              <% end %>
            </div>
            <div class="col-md-6 text-left">
              <%= f.submit 'Save', :class => 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
