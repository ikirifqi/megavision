<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
    <%= breadcrumb_item 'Channel Cities', admins_channel_cities_path %>
    <%= breadcrumb_item 'Channel Packages' %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Channel Package List Management</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
         <!--  <%= link_to new_admins_channel_city_path, :class => 'btn btn-success pull-right' do %>
            <span class="glyphicon glyphicon-plus"></span>&nbsp;Create Channel City
          <% end %>
 -->
          <thead>
            <tr>
              <th>Package</th>
              <th>Channel Group Count</th>
              <th>Price List Count</th>
              <th>Control</th>
            </tr>
          </thead>

          <tbody>
            <% if @channel_packages.empty? %>
              <tr>
                <td colspan="3">You have no channel packages.</td>
              </tr>
            <% else %>
              <% @channel_packages.each do |channel_package| %>
                <tr>
                  <td><%= channel_package.package.name %></td>
                  <td><%= channel_package.channel_groups.count %></td>
                  <td><%= channel_package.prices.count %></td>
                  <td>
                     <%= link_to 'Edit', edit_admins_channel_city_type_channel_package_path(params[:channel_city_id], params[:type_id], channel_package) %>
                   </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
