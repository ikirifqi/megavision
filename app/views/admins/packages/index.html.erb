<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
    <%= breadcrumb_item 'Packages' %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Package List Management</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Payment Title</th>
              <th>Control</th>
            </tr>
          </thead>

          <tbody>
            <% if @packages.empty? %>
              <tr>
                <td colspan="6">You have no packages. <%= link_to 'Create a new one!', new_admins_package_path %>.</td>
              </tr>
            <% else %>
              <% @packages.each do |package| %>
                <tr>
                  <td><%= package.name %></td>
                  <td><%= package.payment_title %></td>
                  <td>
                    <%= link_to 'Edit', edit_admins_package_path(package) %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
