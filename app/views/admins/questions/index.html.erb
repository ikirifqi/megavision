<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
    <%= breadcrumb_item 'Questions' %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Question Management</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <%= link_to new_admins_question_path, :class => 'btn btn-success pull-right' do %>
            <span class="glyphicon glyphicon-plus"></span>&nbsp;Create Question
          <% end %>

          <thead>
            <tr>
              <th>Question</th>
              <th>Attachment</th>
              <th>Posted</th>
              <th>Control</th>
            </tr>
          </thead>

          <tbody>
            <% if @questions.empty? %>
              <tr>
                <td colspan="6">You have no questions. <%= link_to 'Create a new one!', new_admins_question_path %>.</td>
              </tr>
            <% else %>
              <% @questions.each do |question| %>
                <tr>
                  <td><%= question.question %></td>
                  <td><%= question.attachment.present? ? 'Yes' : 'No' %></td>
                  <td><%= question.created_at.to_s %></td>
                  <td>
                    <%= link_to 'Show', admins_question_path(question) %>&nbsp;|
                    <%= link_to 'Edit', edit_admins_question_path(question) %>&nbsp;|
                    <%= link_to 'Destroy', admins_question_path(question), method: :delete, data: { confirm: 'Are you sure?' } %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
