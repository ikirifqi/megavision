<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
    <%= breadcrumb_item 'Channels' %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Channel List Management</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <%= link_to new_admins_channel_path, :class => 'btn btn-success pull-right' do %>
            <span class="glyphicon glyphicon-plus"></span>&nbsp;Create Channel
          <% end %>

          <thead>
            <tr>
              <th>Name</th>
              <th>Control</th>
            </tr>
          </thead>

          <tbody>
            <% if @channels.empty? %>
              <tr>
                <td colspan="6">You have no channels. <%= link_to 'Create a new one!', new_admins_channel_path %>.</td>
              </tr>
            <% else %>
              <% @channels.each do |channel| %>
                <tr>
                  <td><%= channel.name %></td>
                  <td>
                    <%= link_to 'Edit', edit_admins_channel_path(channel) %>&nbsp;|
                    <%= link_to 'Destroy', admins_channel_path(channel), method: :delete, data: { confirm: 'Are you sure?' } %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
