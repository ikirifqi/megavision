<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
    <%= breadcrumb_item 'Prices' %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Price List Management</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <%= link_to new_admins_price_path, :class => 'btn btn-success pull-right' do %>
            <span class="glyphicon glyphicon-plus"></span>&nbsp;Create Price
          <% end %>

          <thead>
            <tr>
              <th>Price</th>
              <th>Speed</th>
              <th>Updated At</th>
              <th>Control</th>
            </tr>
          </thead>

          <tbody>
            <% if @prices.empty? %>
              <tr>
                <td colspan="6">You have no prices. <%= link_to 'Create a new one!', new_admins_price_path %>.</td>
              </tr>
            <% else %>
              <% @prices.each do |price| %>
                <tr>
                  <td><%= number_to_currency(price.amount, :unit => 'Rp', :precision => 0, :delimiter => '.') %></td>
                  <td><%= [price.up_to_speed, price.unit].join(' ') %></td>
                  <td><%= price.updated_at.to_s %></td>
                  <td>
                    <%= link_to 'Edit', edit_admins_price_path(price) %>&nbsp;|
                    <%= link_to 'Destroy', admins_price_path(price), method: :delete, data: { confirm: 'Are you sure?' } %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
